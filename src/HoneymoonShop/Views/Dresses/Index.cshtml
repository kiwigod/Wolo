    <script src="~/js/jquery-scrollable.js"></script>
    <script type="text/javascript">

        jQuery(function ($) {
            debiki.Utterscroll.enable();
        });

    </script>
    <style>
        .image-container {
            position:relative;
            display:inline-block;
        }
        ::-webkit-scrollbar-track {
            display: none;
        }
        ::-webkit-scrollbar-thumb {
            display: none;
        }
        .image-container .text {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: none;
            color: #FFF;
        }
        .image-container:hover .text{
            display: block;
            background: none;
            background: linear-gradient(to right, rgba(255, 229, 232, 0.6), rgba(255, 229, 232, 0));
        }
        .image-container>img {
            width:20.3em; height:45em; margin-right:1.8em;
        }
        .text a {
            text-decoration:none;
        }
        .text a>div {
            height:4em; width:12em; background:white; text-align:center; margin-top:100%; margin-left:18%; padding-top:1.45em
        }
    </style>
}
