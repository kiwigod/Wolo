@{
    ViewData["Title"] = "Schrijf een review";
    ViewData["Background"] = "white";
    ViewData["HeaderHeight"] = "10";
}

<div class="container">
    <div class="col-md-12">
        <form asp-action="Validate">
            <div class="form-horizontal">
                <h4>Review</h4>
                <hr />
                <div class="form-group">
                    <label for="Name" class="col-md-2 control-label">Naam</label>
                    <div class="col-md-10">
                        <input id="Name" name="name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Description" class="col-md-2 control-label">Beschrijving</label>
                    <div class="col-md-10">
                        <input id="Description" name="desc" class="form-control" style="height:10em"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ra" class="col-md-2 control-label">Rating</label>
                    <div class="col-md-10">
                        <select id="ra" name="rat" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
